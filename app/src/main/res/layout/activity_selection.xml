<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcards"
    android:orientation="vertical"
    tools:context=".SelectionActivity">

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/selectbg"
        android:elevation="150dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/recPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginStart="24dp" />


        <TextView
            android:id="@+id/recName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:layout_toEndOf="@id/recPhoto"
            android:text="Your Social Handles "
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/recDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recName"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/recPhoto"
            android:text="Select the handles you want to share" />


    </RelativeLayout>

    <soup.neumorphism.NeumorphFloatingActionButton
        android:id="@+id/fab"
        style="@style/Widget.Neumorph.FloatingActionButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="24dp"
        android:elevation="175dp"
        android:scaleType="centerInside"
        android:src="@drawable/send"
        app:neumorph_backgroundColor="#404040"
        app:neumorph_shadowElevation="5dp" />

    <soup.neumorphism.NeumorphFloatingActionButton
        android:id="@+id/fabSha"
        style="@style/Widget.Neumorph.FloatingActionButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="end"
        android:layout_marginTop="114dp"
        android:layout_marginStart="24dp"
        android:elevation="175dp"
        android:scaleType="centerInside"
        android:src="@drawable/folder"
        app:neumorph_backgroundColor="#404040"
        app:neumorph_shadowElevation="5dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">


            <soup.neumorphism.NeumorphCardView
                android:id="@+id/flat_card"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:onClick="select"
                app:neumorph_lightSource="rightTop"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeWidth="2dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/phone" />


            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/flat_card1"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:onClick="select"
                app:neumorph_lightSource="rightTop"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeWidth="2dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/gmail" />

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/flat_card2"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/flat_card"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:onClick="select"
                app:neumorph_lightSource="rightTop"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeWidth="2dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/facebook" />

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/flat_card3"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/flat_card"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:onClick="select"
                app:neumorph_lightSource="rightTop"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeWidth="2dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/linkedin" />

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/flat_card4"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/flat_card2"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:onClick="select"
                app:neumorph_lightSource="rightTop"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeWidth="2dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/instagram" />

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/flat_card5"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/flat_card2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:onClick="select"
                app:neumorph_lightSource="rightTop"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeWidth="2dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/telegram" />

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/flat_card6"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/flat_card4"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:onClick="select"
                app:neumorph_lightSource="rightTop"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeWidth="2dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/twitter" />

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/flat_card7"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/flat_card4"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:onClick="select"
                app:neumorph_lightSource="rightTop"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeWidth="2dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/whatsapp" />

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/flat_card8"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/flat_card6"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                android:onClick="select"
                app:neumorph_lightSource="rightTop"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeWidth="2dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/snapchat" />


            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/flat_card9"
                style="@style/Widget.Neumorph.CardView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/flat_card6"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:onClick="select"
                app:neumorph_lightSource="rightTop"
                app:neumorph_shapeType="flat"
                app:neumorph_strokeWidth="2dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:src="@drawable/maps" />


            </soup.neumorphism.NeumorphCardView>


        </RelativeLayout>


    </ScrollView>
</RelativeLayout>